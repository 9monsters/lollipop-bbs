    <servlet.version>2.5</servlet.version>
    <jsp.version>2.1</jsp.version>
    <hibernate.version>3.2.5.ga</hibernate.version>
    <javassist.version>3.11.0.GA</javassist.version>
    <struts2.version>2.1.8.1</struts2.version>
    <xwork.version>2.1.6</xwork.version>
    <freemarker.version>2.3.16</freemarker.version>
    <aspectj.version>1.6.7</aspectj.version>
    <mysql.version>5.1.15</mysql.version>
    <c3p0.version>0.9.1.2</c3p0.version>
    <ecache.version>1.2.4</ecache.version>
    <slf4j.version>1.6.0</slf4j.version>
    <commons-dbcp-version>1.4</commons-dbcp-version>
    <commons-lang-version>2.4</commons-lang-version>
    <commons-configuration-version>1.6</commons-configuration-version>
    <commons-collections-version>3.2.1</commons-collections-version>
